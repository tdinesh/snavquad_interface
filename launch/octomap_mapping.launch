<launch>
  <arg name="mav_name" default="$(optenv MAV_NAME)"/>
  <arg name="points_topic" default="/$(arg mav_name)/tof/voxl_point_cloud"/>
  <arg name="map_frame_id" default="odom"/>

  <arg name="radius_search" default="0.1" />
  <arg name="min_neighbors" default="45" />

  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <node pkg="nodelet" type="nodelet" name="z_passthrough" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="$(arg points_topic)" />
    <rosparam>
      filter_field_name: z
      filter_limit_min: 0.2
      filter_limit_max: 2.5
      filter_limit_negative: False
    </rosparam>
  </node>

  <node pkg="nodelet" type="nodelet" name="radius_outlier_removal" args="load pcl/RadiusOutlierRemoval pcl_manager" output="screen">
    <remap from="~input" to="z_passthrough/output" />
    <param name="radius_search" value="$(arg radius_search)" />
    <param name="min_neighbors" value="$(arg min_neighbors)" />
  </node>

  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">

    <!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
    <param name="frame_id" type="string" value="$(arg map_frame_id)" />

    <param name="resolution" type="double" value="0.05" />

    <!-- maximum range to integrate (speedup!) -->
    <param name="sensor_model/max_range" value="2.5" />

    <param name="latch" type="bool" value="false"/>
    <param name="pointcloud_min_z" value="0.5"/>
    <param name="pointcloud_max_z" value="2.0"/>
    <param name="occupancy_min_z" value="0.5"/>
    <param name="occupancy_max_z" value="2.0"/>

    <!-- data source to integrate (PointCloud2) -->
    <remap from="cloud_in" to="radius_outlier_removal/output" />
  </node>
</launch>